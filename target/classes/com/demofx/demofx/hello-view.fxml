<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="225.0" prefWidth="292.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/19" fx:controller="com.demofx.demofx.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Button onAction="#onHelloButtonClick" prefHeight="49.0" prefWidth="75.0" styleClass="btnHello" stylesheets="@../style/hellostyle.css" text="Hello!">
      <font>
         <Font name="System Bold" size="14.0" />
      </font></Button>

    <Label fx:id="welcomeText" styleClass="labelHello" stylesheets="@../style/hellostyle.css" />
</VBox>
