<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="542.0" prefWidth="709.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.demofx.demofx.PersonRegisterController">
   <children>
      <TableView fx:id="tbUser" layoutX="51.0" layoutY="107.0" prefHeight="297.0" prefWidth="607.0" styleClass="tbUser">
         <columns>
            <TableColumn id="tbName" fx:id="colName" prefWidth="243.0" text="Nombre" />
            <TableColumn id="tbSurname" fx:id="colSurname" minWidth="0.0" prefWidth="254.0" text="Apellido" />
            <TableColumn id="tbAge" fx:id="colAge" prefWidth="109.0" text="Edad" />
         </columns>
      </TableView>
      <Button fx:id="btnCreate" layoutX="96.0" layoutY="429.0" mnemonicParsing="false" onAction="#onCreateUser" prefHeight="34.0" prefWidth="67.0" styleClass="btnCreate" text="Registrar" />
      <Button fx:id="btnUpdate" layoutX="317.0" layoutY="429.0" mnemonicParsing="false" onAction="#onUpdateUser" prefHeight="34.0" prefWidth="77.0" styleClass="btnUpdate" text="Actualizar" />
      <Button fx:id="btnDelete" layoutX="536.0" layoutY="429.0" mnemonicParsing="false" onAction="#onDeleteUser" prefHeight="34.0" prefWidth="84.0" styleClass="btnDelete" text="Eliminar" />
      <Label layoutX="76.0" layoutY="53.0" prefHeight="25.0" prefWidth="108.0" text="Buscar Por Nombre:" />
      <TextField fx:id="txtFind" layoutX="198.0" layoutY="53.0" onKeyReleased="#onFindByName" prefHeight="25.0" prefWidth="160.0" />
   </children>
</AnchorPane>
